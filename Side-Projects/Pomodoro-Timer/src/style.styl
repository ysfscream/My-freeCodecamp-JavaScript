pomodoro-color = #DD2D39
pomodoro-color__inline = #f77079
background-color = #F7F2ED

html
	body
		margin 0
		padding 0
		font-size 16px
		background background-color
		z-index: 9

div
	box-sizing border-box

#app
	width 100%
	height 100%
	.clock
		position relative
		width 400px
		height 400px
		margin 5rem auto
		border-radius 50%
		background #fff
		text-align center
		.clock-border
			position absolute
			width 420px
			height 420px
			border-radius 50%
			background pomodoro-color
			text-align center
		.clock-progress
			width 400px
			height 0%
			position absolute
			bottom 0
			background pomodoro-color__inline
