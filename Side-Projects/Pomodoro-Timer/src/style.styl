background-color = #F7F2ED
red = #ff5f53
blud = #00bbda

@import url(http://fonts.font.im/css?family=Oswald)

html
	body
		margin 0
		padding 0
		font-family 'Oswald', sans-serif
		font-size 16px
		background background-color
		z-index 9
		div
			box-sizing border-box
		button
			cursor pointer
			outline none

#app
	width 100%
	height 100%
	text-align center
	.title
		font-size 3rem
		color #868484
		margin 0px
		h3
			margin 10px auto
		p
			margin 10px auto
	.oper
		display flex
		justify-content space-around
		p
			font-size 1.25rem
		.oper-btn
			font-size: 2rem
			height 50px
			border 1px solid transparent
		.minus-btn
			border-radius 8px 0 0 8px
		.plus-btn
			border-radius 0 8px 8px 0
		.oper-input
			position relative
			top 1px
			height 50px
			width 120px
			line-height 50px
			font-size 2rem
			outline: none
			border none
			padding 0
			color #fff
			text-align center
		.break-time
			background #00bbda
		.session-time
			background #ff5f53
		input::-webkit-outer-spin-button,
		input::-webkit-inner-spin-button
				-webkit-appearance: none
				appearance: none 
				margin: 0
		input
			-moz-appearance:textfield
	.start-ctrl
		margin-top 20px
		.start-btn
			color #fff
			font-size 1.5rem
			display block
			margin 20px auto
			width 100px
			height 100px
			border-radius 50%
			border none
			background-image linear-gradient(to top, #accbee 0%, #e7f0fd 100%)
			filter drop-shadow(1px 1px 2px rgba(4px, 4px, 4px, .3))
			transition .2s ease
			&:active
				filter drop-shadow(1px 1px 2px rgba(0, 0, 0, 0))

@media screen and (max-width: 600px)
	.oper
		flex-direction column-reverse